<body style="background-color: rgba(53, 213, 235, 0.233);">
	<!-- Main Content -->
	<div class="container-fluid" style="padding-top: 40px;">
		<div class="row main-content bg-success text-center" >
      <div class="col-md-4 text-center company__info">
        <a href="/"> <span class="company__logo"><h4 style="color: white;"><i class="fa fa-home" aria-hidden="true"></i></h4></span>
        <h4 class="company_title" style="color: white;">Home Page</h4></a>
